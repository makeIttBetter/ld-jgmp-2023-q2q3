pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = 'jenkins-docker-jgmp'
        KUBECONFIG_CREDENTIALS = 'kubeconfig-secret'
    }

    // Declare the variable at the top-level scope.
    def appImage

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    checkout scm
                    def dockerfilePath = 'main/develop/module/module6/Dockerfile'
                    appImage = docker.build("dockeruser111111111/jgmp-test:${env.BUILD_ID}", "-f ${dockerfilePath} .")
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', "${DOCKERHUB_CREDENTIALS}") {
                        appImage.push("${env.BUILD_ID}")
                    }
                }
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                script {
                    kubernetesDeploy(manifests: 'main/develop/module/module6/k8s-manifest.yaml')
                }
            }
        }
    }
}
